@model List<Employee>
@{
    ViewData["Title"] = "Employee Management";
}

<div class="text-center">
    <h1 class="display-6">Employee Management</h1>
    <p>Todo</p>
</div>

<div class="container-fluid">
    <div class="text-end">
        <a class="btn btn-info" action="Create">Add new Employee</a>
    </div>
    <table class="table table-light">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Gender</th>
            <th>DoB</th>
            <th>Salary</th>
            <th>Features</th>
        </tr>
        @if(Model != null){
            @foreach(var emp in Model){
                <tr>
                    <td>@emp.EmpId</td>
                    <td>@emp.Name</td>
                    <td>@emp.Gender</td>
                    <td>Not Set</td>
                    <td>@emp.Salary</td>
                    <td class="col-md-2">
                        <div class="d-flex">
                            <a class="btn btn-success me-3" action="Detail" asp-route-id="@emp.EmpId">Detail</a>
                            <a class="btn btn-warning me-3" action="Edit" asp-route-id="@emp.EmpId">Edit</a>
                            <form action="Delete" method="post">
                                <input type="hidden" name="id" value="@emp.EmpId">
                                <input class="btn btn-danger" type="submit" value="Delete">
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
        else{
            <tr>No Rows</tr>
        }
    </table>
</div>